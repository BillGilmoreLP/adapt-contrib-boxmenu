<div class="m-box-menu__inner">
  {{{a11y_aria_label _globals._menu._boxmenu.ariaRegion}}}

  <div class="m-box-menu__header">
    <div class="m-box-menu__header-inner">

      {{#if displayTitle}}
      <div class="m-box-menu__title">
        <div class="m-box-menu__title-inner" {{{a11y_attrs_heading "menu"}}}>
          {{{compile displayTitle}}}
        </div>
      </div>
      {{/if}}

      {{#if body}}
      <div class="m-box-menu__body">
        <div class="m-box-menu__body-inner">
          {{{compile_a11y_text body}}}
        </div>
      </div>
      {{/if}}

      {{#if instruction}}
      <div class="m-box-menu__instruction">
        <div class="m-box-menu__instruction-inner">
          {{{compile_a11y_text instruction}}}
        </div>
      </div>
      {{/if}}

    </div>
  </div>

  <div class="m-box-menu__item-container">
    <div class="m-box-menu__item-container-inner">
      {{!-- Menu items render here --}}
    </div>
  </div>

  {{{a11y_aria_label_relative _globals._menu._boxmenu.menuEnd}}}

</div>
